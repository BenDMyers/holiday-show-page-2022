---
import Logo from './Logo.astro';
import RegistrationButton from './RegistrationButton.astro';
---

<header role="banner">
  <nav>
    <a href="/#sponsors">Sponsors</a>
    <a href="/#guests">Guests</a>
    <a href="/#contributors">Team</a>
  </nav>
  <Logo />
  <div class="actions">
    <RegistrationButton color="#c23616">Register</RegistrationButton>
  </div>
</header>

<style lang="scss">
    header[role='banner'] {
      --container-width: 80ch;

      align-items: center;
      display: flex;
      flex-flow: column;
      gap: 1rem;
      // height: 100px;
      justify-content: space-between;
      margin-inline: auto;
      padding-block: 1rem;
      width: min(var(--container-width), 100% - 3rem);
      @media (min-width: 640px) {
        flex-flow: row;
      }
      nav {
        display: flex;
        flex: 1;
        gap: 1rem;
        order: 2;
        @media (min-width: 640px) {
          order: 1;
        }
        a {
          color: var(--body-color);
          text-decoration: none;
          &:hover {
            text-decoration: underline;
          }
        }
      }

      .actions {
        display: flex;
        flex: 1;
        justify-content: flex-end;
        order: 3;
        @media (min-width: 640px) {
          order: 3;
        }
      }
    }
</style>
